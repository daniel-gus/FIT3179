{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Employed Population in Malaysia",
    "width": 550,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/daniel-gus/FIT3179/master/Visualisation%202/js/state_boundaries_topojson.json",
      "format": {
            "type": "topojson",
            "feature": "state_boundaries"
          }
    },
    "params":[
      {
          "name": "year_selection",
          "value": 2020,
          "bind":{
              "input": "select",
              "options":[
                  2020,
                  2010,
                  2000,
                  1990,
                  1982
              ],
              "labels":[
                  "2020",
                  "2010",
                  "2000",
                  "1990",
                  "1982"
              ],
              "name": "Year Selection"
          }
      }

  ],
    "transform": [
      {"filter": "datum.Year == year_selection"},
      {"filter": "datum.State != 'Malaysia'"},
      {"calculate": "datum.Employed * 1000" , "as": "Employed"},     
      {
        "lookup": "properties.state",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/daniel-gus/FIT3179/master/Visualisation%202/Datasets/Employed%20person%20by%20sex%20and%20state%201982%20to%202020%20Malay.csv"
          },
          "key": "state",
          "fields": ["Employed"]
        }
      }
    ],
    "projection": {
      "type": "equirectangular"
    },
    "mark": {
      "type": "geoshape"
      },
    "encoding": {
      "color": {
        "field": "Employed",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.state", "type": "nominal", "title": "state"},
        {"field": "Employed", "type": "quantitative"}
      ]
    }
  
  }