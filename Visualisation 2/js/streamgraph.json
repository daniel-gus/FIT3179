{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300, "height": 200,
    "data": {"url": "https://raw.githubusercontent.com/daniel-gus/FIT3179/master/Visualisation%202/Datasets/Employed_persons_by_occupation_and_state_1982_2020.json"},
    "transform": [
        {"filter": "datum.Country/State == 'JOHOR'"}
    ],
    "mark": "area",
    "encoding": {
      "x": {
        "timeUnit": "year", "field": "Year",
        "axis": {"domain": false, "format": "%Y", "tickSize": 0}
      },
      "y": {
        "aggregate": "sum", "field": "Person ('000)",
        "axis": null,
        "stack": "center"
      },
      "color": {"field":"Occupation", "scale":{"scheme": "category20b"}}
    }
  }
  