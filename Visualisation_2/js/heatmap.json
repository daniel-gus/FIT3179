{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/daniel-gus/FIT3179/master/Visualisation_2/Datasets/Employed_persons_by_age_group_and_state_1982_2020.csv"
    },
    "params":[
        {
            "name": "year_selection",
            "value": 2020,
            "bind":{
                "input": "select",
                "options":[
                    2020,
                    2010,
                    2000,
                    1990,
                    1982
                ],
                "labels":[
                    "2020",
                    "2010",
                    "2000",
                    "1990",
                    "1982"
                ],
                "name": "Year Selection: "
            }
        }
    ],
    "transform": [
        {"filter": "datum.Year == year_selection"},
        {"filter": "datum.AgeGroup != 'Total'"},
        {"filter": "datum.CountryState != 'MALAYSIA'"}
    ],


    "title": "Employed Population by Age Group and State",
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 13
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "CountryState",
            "type": "nominal",
            "title": "CountryState",
            "scale": {"domain": ["MALAYSIA", "JOHOR", "KEDAH", "MELAKA", "NEGERI SEMBILAN", "PAHANG", "PULAU PINANG", "PERAK", "PERLIS", "SELANGOR", "TERENGGANU", "SABAH", "SARAWAK","W.P.KUALA LUMPUR", "W.P.LABUAN", "W.P.PUTRAJAYA"]},
            "axis": {"labelAngle": -45}
        },
        "y": {
            "field": "AgeGroup",
            "type": "ordinal",
            "title": "Age Group",
            "scale": {"domain": ["60–64", "55–59", "50–54", "45–49", "40–44", "35–39", "30–34", "25–29", "20–24", "15–19"]}
        },
        "color": {
            "field": "Employed",
            "type": "quantitative",
            "scale": {"type": "log"},
            "legend": {
                "title": "Employed"
            }        
        },
        "tooltip": [
            {
                "field": "CountryState",
                "title": "State"
            },
            {
                "field": "AgeGroup",
                "title": "Age Group"
            },
            {
                "field": "Employed",
                "title": "Employed Population ('000)"
            }
        ]
    }
  }